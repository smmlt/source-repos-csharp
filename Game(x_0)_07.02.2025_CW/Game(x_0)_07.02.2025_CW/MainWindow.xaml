<Window x:Class="Game_x_0__07._02._2025_CW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_x_0__07._02._2025_CW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Button x:Name="btn1" Grid.Column="0" Grid.Row="0"/>
        <Button x:Name="btn2" Grid.Column="1" Grid.Row="0"/>
        <Button x:Name="btn3" Grid.Column="2" Grid.Row="0"/>
        <Button x:Name="btn4" Grid.Column="0" Grid.Row="1"/>
        <Button x:Name="btn5" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="btn6" Grid.Column="2" Grid.Row="1"/>
        <Button x:Name="btn7" Grid.Column="0" Grid.Row="2"/>
        <Button x:Name="btn8" Grid.Column="1" Grid.Row="2"/>
        <Button x:Name="btn9" Grid.Column="2" Grid.Row="2"/>

        <Label x:Name="label" Content="Game offline" Grid.Row="3" Grid.ColumnSpan="2"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" />
        <Button x:Name="btnStart" Content="Start" Grid.Column="3" Grid.Row="4" FontSize="20" Background="LawnGreen"/>
    </Grid>
</Window>
