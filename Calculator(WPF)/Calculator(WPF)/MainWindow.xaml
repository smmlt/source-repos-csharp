<Window x:Class="Calculator_WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_WPF_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.ColumnSpan="4" Background="White" Foreground="Gray" 
         Text="3 + 5 - 1 * 4" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"
         Margin="1 5 1 2.5" BorderBrush="LightGray" />

        <Label Name="Label" Grid.Row="1" Grid.ColumnSpan="4" Background="White" Content="12" 
         VerticalContentAlignment="Center" HorizontalContentAlignment="Right" BorderBrush="Gray"  BorderThickness="0.5"
         FontFamily="Arial" FontSize="30" FontWeight="Bold"  Margin="1 2.5 1 5" />

        <Button  Grid.Row="2" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="CE" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                   FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="C" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                   FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="&lt;" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                   FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="/" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                   FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="7" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
           FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="8" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
           FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="9" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
           FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="*" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
   FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="6" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="-" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="1" Margin="0.5"> 
            <Label Content="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="+" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="." VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" Margin="0.5">
            <Label Content="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

        <Button  Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Margin="0.5">
            <Label Content="=" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
FontFamily="Arial" FontSize="30" />
        </Button>

    </Grid>
</Window>
