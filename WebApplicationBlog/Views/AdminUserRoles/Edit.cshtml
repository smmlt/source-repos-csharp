@model WebApplicationBlog.Models.ViewModels.Admins.EditUserRolesViewModel
@{
    ViewData["Title"] = "Admin User Roles Edit";
    Layout = "_LayoutAdmin";
}
<h2>Edit Roles for @Model.UserName</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId"/>
    <table class="table">
        <thead>
        <tr>
            <th>Role</th>
            <th>Assigned</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Roles.Count; i++)
        {
            <tr>
                <td>@Model.Roles[i].RoleName</td>
                <td>
                    <input asp-for="@Model.Roles[i].Selected" type="checkbox"/>
                    <input asp-for="@Model.Roles[i].RoleName" type="hidden"/>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

