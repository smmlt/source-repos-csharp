<Window x:Class="Server_V4_05._02._2025_CW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server_V4_05._02._2025_CW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label x:Name="labelClients" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Content="Clients: 0" FontSize="22" FontWeight="Bold" />

        <Label Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
       Content="Chat" FontSize="22" FontWeight="Bold" Foreground="ForestGreen"/>

        <ListView x:Name="LvClients" Grid.Row="1" Background="AliceBlue" Margin="10" FontSize="18" />
        <ListView x:Name="LvChat" Grid.Row="1" Grid.Column="1" Background="AntiqueWhite" Margin="10" FontSize="18" />

    </Grid>
</Window>
